@page
@model DeleaSarca_Georgiana_proiect.Pages.Songs.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Song</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Song.ID" />
            <div class="form-group">
                <label asp-for="Song.Title" class="control-label"></label>
                <input asp-for="Song.Title" class="form-control" />
                <span asp-validation-for="Song.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Song.Album" class="control-label"></label>
                <input asp-for="Song.Album" class="form-control" />
                <span asp-validation-for="Song.Album" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Song.WeeksInTop40" class="control-label"></label>
                <input asp-for="Song.WeeksInTop40" class="form-control" />
                <span asp-validation-for="Song.WeeksInTop40" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Song.FirstRelease" class="control-label"></label>
                <input asp-for="Song.FirstRelease" class="form-control" />
                <span asp-validation-for="Song.FirstRelease" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Song.RecordLabelID" class="control-label">RecordLabel</label>
                <select asp-for="Song.RecordLabelID" class="form-control" asp-items="ViewBag.RecordLabelID"></select>
                <span asp-validation-for="Song.RecordLabelID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Song.ArtistID" class="control-label">Artist</label>
                <select asp-for="Song.ArtistID" class="form-control" asp-items="ViewBag.ArtistID"></select>
                <span asp-validation-for="Song.ArtistID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="table">
                    <table>
                        <tr>
                            @{
                                int cnt = 0;
                                foreach (var gen in Model.AssignedGenreDataList)
                                {
                                    if (cnt++ % 3 == 0)
                                    {
                                    @:</tr><tr>
                                    }
                                    @:<td>
                                        <input type="checkbox"
                                               name="selectedGenres"
                                               value="@gen.GenreID"
                                               @(Html.Raw(gen.Assigned ? "checked=\"checked\"" : "")) />
                                        @gen.GenreID @: @gen.Name
                                    @:</td>
                                }
                            @:</tr>
                            }
                        </table>
                    </div>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="./Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }